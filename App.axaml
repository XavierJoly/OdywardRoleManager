<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="_0900_OdywardRoleManager.App"
             xmlns:local="using:_0900_OdywardRoleManager"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#4F6BED"/>
        <SolidColorBrush x:Key="SubtleForegroundBrush" Color="#737780"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="/Styles/Controls.axaml"/>
    </Application.Styles>
</Application>
